<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="eu.codlab.cyphersend"
    android:versionCode="1"
    android:versionName="0.1" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="16" />

    <uses-permission android:name="android.permission.NFC" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"

        android:theme="@style/AppTheme" >
        <activity
                android:name="eu.codlab.cyphersend.ui.view.CypherMainActivity"
                android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <action android:name="android.nfc.action.NDEF_DISCOVERED"/>
                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:scheme="http"
                      android:host="254.254.254.254"
                      android:pathPrefix="/me"/>
            </intent-filter>
        </activity>
        <activity
            android:name="eu.codlab.cyphersend.ui.view.DecodeUrlActivity"
            android:label="@string/app_name"
            android:theme="@style/DialogTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>

            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:scheme="http"
                      android:host="254.254.254.254"
                      android:pathPrefix="/decode"/>
            </intent-filter>
        </activity>
        <activity
                android:name="eu.codlab.cyphersend.ui.view.SettingsActivity"
                android:label="@string/app_name" >
        </activity>
        <activity
                android:name="eu.codlab.cyphersend.ui.view.ShareFriendsActivity"
                android:icon="@drawable/ic_encrypt"
                android:label="@string/app_cypher_and_send"
                android:theme="@style/DialogTheme" >
            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="text/plain" />
            </intent-filter>
        </activity>
        <activity
                android:name="eu.codlab.cyphersend.ui.view.ShareThirdPartyFriendsActivity"
                android:icon="@drawable/ic_third_party"
                android:label="@string/app_cypher_and_apps"
                android:theme="@style/DialogTheme" >
            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="text/plain" />
            </intent-filter>
        </activity>
    </application>

</manifest>
